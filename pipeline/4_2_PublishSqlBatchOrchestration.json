							"typeProperties": {
								"source": {
									"type": "AzureSqlSource",
									"sqlReaderQuery": {
										"value": "SELECT *\nFROM Config.vwPublishMetadata\nWHERE JobID = @{pipeline().parameters.JobId}\nAND Priority = @{pipeline().parameters.Priority}\nAND BatchNumber = @{pipeline().parameters.BatchNumber}\nAND PublishId = @{item().PublishId}\nAND Status = 'TableCreated'",
										"type": "Expression"
									},
									"queryTimeout": "02:00:00",
									"partitionOption": "None"
