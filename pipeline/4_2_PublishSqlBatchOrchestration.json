							"type": "Int32"
						},
						"message": {
							"value": {
								"value": "@concat(pipeline().Pipeline, 'for JobId:',string(pipeline().parameters.JobID),'and \n Batch number',string(pipeline().parameters.BatchNumber) ,'Started')",
